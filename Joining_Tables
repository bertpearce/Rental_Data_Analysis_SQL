# Query 1: Find the top 10 countries for Rockbuster in terms of customer numbers by joining tables.

SELECT 
D.country,
COUNT(A.customer_id) AS number_of_customers
FROM customer A
JOIN address B ON A.address_id = B.address_id
JOIN city C ON B.city_id = C.city_id
JOIN country D ON C.country_id = D.country_id
GROUP BY D.country
ORDER BY number_of_customers DESC
LIMIT 10;

# Query 2: Identify the top 10 cities that fall within the top 10 countries you identified in the previous query by joining tables.

SELECT 
C.city,
D.country,
COUNT(A.customer_id) AS number_of_customers
FROM customer A
JOIN address B ON A.address_id = B.address_id
JOIN city C ON B.city_id = C.city_id
JOIN country D ON C.country_id = D.country_id
WHERE D.country IN (
SELECT 
D.country
FROM customer A
JOIN address B ON A.address_id = B.address_id
JOIN city C ON B.city_id = C.city_id
JOIN country D ON C.country_id = D.country_id
GROUP BY D.country
ORDER BY COUNT(A.customer_id) DESC
LIMIT 10
)
GROUP BY C.city, D.country
ORDER BY number_of_customers DESC
LIMIT 10;

# Query 3: Find the top 5 customers from the top 10 cities whoâ€™ve paid the highest total amounts to Rockbuster by joining tables.

SELECT 
A.customer_id,
A.first_name,
A.last_name,
E.country,
D.city,
SUM(B.amount) AS total_amount_paid
FROM customer A
JOIN payment B ON A.customer_id = B.customer_id
JOIN address C ON A.address_id = C.address_id
JOIN city D ON C.city_id = D.city_id
JOIN country E ON D.country_id = E.country_id
WHERE D.city IN (
SELECT 
city 
FROM customer A
JOIN address C ON A.address_id = C.address_id
JOIN city D ON C.city_id = D.city_id
JOIN country E ON D.country_id = E.country_id
GROUP BY D.city
ORDER BY COUNT(A.customer_id) DESC
LIMIT 10
)
GROUP BY 
A.customer_id,
A.first_name,
A.last_name,
E.country,
D.city
ORDER BY total_amount_paid DESC
LIMIT 5;
